
<div class="container pad-down">
  <div class="row">
    <br>
    <div class="col-md-2 col-md-offset-3">
      <%= image_tag current_user.image, class: "profilePic img-responsive fix-img thumbnail" %>
    </div>
    <div class="col-md-3">
      <h1><%= @user.username %></h1> <br>
      <h2><%= @user.email %></h2> <br>
      <p>
        Joined On: <%= @user.created_at.strftime("%b %d, %Y") %>
      </p>
    </div>

  </div>
  <div class="row">
    <%= link_to "GO", "/", class: "btn btn-success newTask" %>
    <%= link_to "New Task", new_user_task_path(@user), class: "btn btn-info newTask" %>
  </div>
  <div class="row">
    <% @tasks.each do |task|  %>
      <div class="task">
        <h2><%= task.name %></p>
        <p><%= task.location %></p>
        <p> Created <%= time_ago_in_words (task.created_at) %> ago.</p>
        <%= button_to 'Delete Task', user_task_path(@user, task), :method => :delete %>
        <%= button_to 'Edit Task', edit_user_task_path(@user, task), :method => :get %>
      </div>
    <% end %>
  </div>
</div>
